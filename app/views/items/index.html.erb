<div class="row">
  <%= render "item_grid" %>
</div>
<br>
<div class="row">
  <% if current_user %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete %><br>
    <%= link_to "Checkout", cart_path(current_cart) %>
    <br><br>
  <% else %>
    <%= link_to "Sign up / Sign in", new_user_session_path %>
  <% end %>
  <br><br>
  <%= link_to "List an item", new_item_path %>
  <br><br>
</div>
<div class="row">
  <% @items.each do |item| %>
    <%= link_to item do %>
      <%= item.name %><br>
      <%= cents_to_dollars item.price %> <br>
      <%= item.description %><br>
      <%= link_to "Add to cart", add_carts_path(item_id: item.id), method: :post, remote: true %><br><br>
    <% end %>
  <% end %>
</div>
