<% if @user %>
  <%= form_for(@user, :as => resource_name, :url => registration_path(@user), html: {class: 'form-horizontal'}) do |f| %>
    <%= render 'form', f: f %>
    <%= render :partial => "devise/shared/links" %>
  <% end %>
<%else %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form- horizontal'}) do |f| %>
    <%= render 'form', f: f %>
    <%= render :partial => "devise/shared/links" %>
  <% end %>
<% end %>


