<div class="control-group">
  <div class="controls">
    <h2>Sign up</h2>
  </div>
</div>
<%= devise_error_messages! %>

<div class='control-group'>
  <%= f.label :email, class: 'control-label', for: 'user_email' %>
  <div class="controls">
    <%= f.email_field :email %>
  </div>
</div>

<div class='control-group'>
  <%= f.label :password, class: 'control-label', for: 'user_password' %>
  <div class="controls">
    <%= f.password_field :password %>
  </div>
</div>

<div class='control-group'>
  <%= f.label :password_confirmation, class: 'control-label', for: 'user_password_confirmation' %>
  <div class="controls">
    <%= f.password_field :password_confirmation %>
  </div>
</div>

<div class='control-group'>
  <div class="controls">
    <%= f.submit "Sign up" %>
  </div>
</div>